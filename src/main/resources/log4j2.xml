<?xml version="1.0" encoding="UTF-8"?>

<Configuration>
    <!-- 로그 출력 방식 -->
    <Appenders>
        <!-- 콘솔 출력 방식 -->
        <Console name="console-log" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p [%c] %msg%n" />
        </Console>
    </Appenders>

    <Loggers>
        <Logger name="java.sql" level="INFO" additivity="false">
            <AppenderRef ref="console"/>
        </Logger>
        <Logger name="moniter.PrinterClient" level="DEBUG">

        </Logger>
        <Root level="DEBUG">
            <appender-ref ref="console-log" level="DEBUG" />
        </Root>
    </Loggers>
</Configuration>